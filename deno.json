{
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "importMap": "./import_map.json",
  "tasks": {
    "build-wasm": "wasm-pack build --target web ./packages/tokenizer",
    "build-ts": "deno bundle ./packages/ui/src/main.tsx ./packages/ui/dist/main.js && deno bundle ./packages/tokenizer/src/main.ts ./packages/tokenizer/dist/main.js",
    "watch-ts": "deno bundle --watch ./packages/ui/src/main.tsx ./packages/ui/dist/main.js | deno bundle --watch ./packages/tokenizer/src/main.ts ./packages/tokenizer/dist/main.js",
    "build": "deno task build-wasm && deno task build-ts"
  }
}
